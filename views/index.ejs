<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head')  %> 
<body>
<!-- Header -->
  <%- include('partials/header') %> 
<!-- Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% productsVisited.forEach(producto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%- producto.id %>/<%- producto.category %>">
							<figure class="product-box_image">
								<img src="/images/products/<%- producto.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace( /\B(?=(\d{3})+(?!\d))/g,
									".") %> </h2>
								<% if (producto.dicount != 0) { %>
									<span><%- producto.discount %> % OFF</span>
								<% } %>
								<p><%- producto.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% productsInSale.forEach(producto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%- producto.id %>/<%- producto.category %>">
							<figure class="product-box_image">
								<img src="/images/products/<%- producto.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace( /\B(?=(\d{3})+(?!\d))/g,
									".") %> </h2>
								<% if (producto.dicount != 0) { %>
									<span><%- producto.discount %> % OFF</span>
								<% } %>
								<p><%- producto.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>	
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %> 
  <!-- /footer -->
  
  <!-- Scripts -->
  <%- include('partials/scripts') %> 
  <!-- Scripts -->
</body>
</html>